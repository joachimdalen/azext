{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json",
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "simple-import-sort"
    ],
    "extends": [
        "prettier",
        "prettier/@typescript-eslint",
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "simple-import-sort/imports": "warn",
        "no-console": "off",
        "sort-keys": "off"
    },
    "env": {
        "node": true,
        "es6": true
    }
}